package main

// Test: Tuples with complex types
// Feature: Tuples with pointers, slices, maps, channels
// Complexity: intermediate

type User struct {
	name string
	age  int
}

func getPointers() (*int, *string) {
	x := 42
	s := "hello"
	return &x, &s
}

func getCollections() ([]int, map[string]int) {
	nums := []int{1, 2, 3}
	counts := map[string]int{"a": 1, "b": 2}
	return nums, counts
}

func getChannel() (chan int, chan string) {
	ch1 := make(chan int)
	ch2 := make(chan string)
	return ch1, ch2
}

func getMixed() (*User, []string, map[int]bool) {
	u := &User{name: "Alice", age: 30}
	tags := []string{"admin", "user"}
	flags := map[int]bool{1: true, 2: false}
	return u, tags, flags
}

func main() {
	// Pointer tuples
	let (pInt, pStr) = getPointers()
	println("Pointers:", *pInt, *pStr)

	// Collection tuples
	let (nums, counts) = getCollections()
	println("Collections:", len(nums), len(counts))

	// Channel tuples
	let (ch1, ch2) = getChannel()
	println("Channels:", ch1, ch2)

	// Mixed complex types
	let (user, tags, flags) = getMixed()
	println("Mixed:", user.name, len(tags), len(flags))
}
