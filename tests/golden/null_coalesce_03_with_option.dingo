package main

// Test: Null coalescing with Option type methods
// Feature: ?? operator with Option type
// Complexity: advanced

enum Option {
	Some(int),
	None,
}

func find(arr []int, target int) Option {
	for i, val := range arr {
		if val == target {
			return OptionSome(i)
		}
	}
	return OptionNone()
}

func main() {
	let numbers = []int{10, 20, 30, 40}

	// Null coalescing with Option
	let index = find(numbers, 25) ?? -1
	let value = find(numbers, 30) ?? 0

	// Combined with comparison
	let result = find(numbers, 20) ?? -1
	let msg = "not found"
	if result >= 0 {
		msg = "found"
	}

	println("Index:", index, "Value:", value, "Status:", msg)
}
