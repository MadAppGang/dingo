---
// Side-by-side code comparison with Dingo/Goal labels
// Reference: reference/src/components/CodeComparison.tsx
// Following ai-docs/recipes/images.md for retina image handling
import CodeBlock from './CodeBlock.astro';
import { Image } from 'astro:assets';
import dingoLogo from '../assets/dingo-logo-small.png';
import golangLogo from '../assets/golang-logo-small.png';

interface Props {
  before: string;
  after: string;
  language: string;
}

const { before, after, language } = Astro.props;
---

<div class="grid grid-cols-2 gap-8 p-8">
  <!-- Dingo -->
  <div class="flex flex-col gap-4">
    <div class="flex items-center gap-3">
      <div class="w-12 h-12 flex items-center justify-center">
        <Image
          src={dingoLogo}
          alt="Dingo logo"
          class="w-12 h-12 object-contain rounded-lg"
          width={48}
          height={48}
          densities={[1, 2]}
        />
      </div>
      <h3 class="text-lg font-semibold text-gray-800">Dingo</h3>
    </div>
    <CodeBlock code={before} language={language} />
  </div>

  <!-- Goal (Go) -->
  <div class="flex flex-col gap-4">
    <div class="flex items-center gap-3">
      <div class="w-12 h-12 flex items-center justify-center">
        <Image
          src={golangLogo}
          alt="Go logo"
          class="w-12 h-12 object-contain"
          width={48}
          height={48}
          densities={[1, 2]}
        />
      </div>
      <h3 class="text-lg font-semibold text-gray-800">Go</h3>
    </div>
    <CodeBlock code={after} language={language} />
  </div>
</div>
